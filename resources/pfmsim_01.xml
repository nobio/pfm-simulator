<?xml version="1.0" encoding="UTF-8"?>
<simulation>
    <!-- ============================================================== -->
    <!-- ======================== HEADER ============================== -->
    <!-- ============================================================== -->
    <!-- number of iterations which can be identified with "days" -->
    <iterations>10</iterations>

    <!-- pause in ms between two iterations -->
    <pause>00</pause>

    <!-- general availability for all resources except there is another value 
        defined at resource level -->
    <availability>1</availability>

    <!-- how far into future efforts can be planned? 2 years = 730 -->
    <planning_horizont>730</planning_horizont>

    <!-- definition of skills; will be referenced by resources and projects/tasks -->
    <skill id="jd" name="Java Developer" />
    <skill id="dd" name="Database Designer" />
    <skill id="cd" name="Caas Developer" />
    <skill id="xy" name="Klassenkasper" />


    <!-- definition of project phases; the efforts are meant to be a weight 
        value; all weights of all phases in one project mean 100% -->
    <phase id="init">
        <name>Initialisation</name>
        <!-- parallel=1: max 1 resource is involved in this phase; parallel=-1:all 
            available resources contribute to this phase... -->
        <parallel>1</parallel>
        <workload>
            <distribution type="Equal">
                <param1>6</param1>
                <param2>10</param2>
            </distribution>
        </workload>
    </phase>
    <phase id="prep">
        <name>Preperation</name>
        <parallel>1</parallel>
        <workload>
            <distribution type="Equal">
                <param1>10</param1>
                <param2>20</param2>
            </distribution>
        </workload>
    </phase>
    <phase id="spec">
        <name>Specification</name>
        <parallel>2</parallel>
        <workload>
            <distribution type="Normal">
                <param1>20</param1>
                <param2>3</param2>
            </distribution>
        </workload>
    </phase>
    <phase id="constr">
        <name>Construction</name>
        <parallel>-1</parallel>
        <workload>
            <distribution type="Normal">
                <param1>50</param1>
                <param2>10</param2>
            </distribution>
        </workload>
    </phase>
    <phase id="acc">
        <name>Acceptance</name>
        <parallel>-1</parallel>
        <workload>
            <distribution type="Normal">
                <param1>5</param1>
                <param2>1</param2>
            </distribution>
        </workload>
    </phase>
    <phase id="trans">
        <name>Transition</name>
        <parallel>1</parallel>
        <workload>
            <distribution type="Normal">
                <param1>3</param1>
                <param2>1</param2>
            </distribution>
        </workload>
    </phase>

    <!-- definition of project categories like Small Enhancement, Normal 
        Project, Big Project with it's effort definition -->
    <project_category id="np">
        <name>Normal Project</name>
        <!-- this is how the chances of this project category has compared 
            to others; please use "weighted" here; goes to Category.projectCategoryStartProbability -->
        <distribution type="Weighted"
            comment="probability to init a project and add ot to the queue">
            <param1>1</param1>
        </distribution>

        <!-- skills needed for this project category with a certain probability 
            distribution; must not use "weighted" here -->
        <skill ref="jd">
            <distribution type="Normal">
                <param1>2</param1>
                <param2>0.5</param2>
            </distribution>
        </skill>
        <skill ref="dd">
            <distribution type="Equal">
                <param1>1</param1>
                <param2>1.5</param2>
            </distribution>
        </skill>

        <!-- defines the duration of a project in this category; will be 
            distributed over all phases -->
        <project_duration>
            <distribution type="Normal"
                comment="time units; the type must not be weighted">
                <param1>60</param1>
                <param2>10</param2>
            </distribution>
        </project_duration>

        <!-- definition of the phases of this project category -->
        <phase ref="prep" />
        <phase ref="spec" />
        <phase ref="constr" />
        <phase ref="acc" />
        <phase ref="trans" />
    </project_category>
    <project_category id="sm">
        <name>Small Enhancement</name>
        <!-- this is how the chances of this project category has compared 
            to others; please use "weighted" here -->
        <distribution type="Weighted">
            <param1>1</param1>
        </distribution>

        <!-- defines the duration of a project in this category; will be 
            distributed over all phases -->
        <project_duration>
            <distribution type="Normal"
                comment="time units; the type must not be weighted">
                <param1>20</param1>
                <param2>5</param2>
            </distribution>
        </project_duration>

        <!-- skill needed for this task -->
        <skill ref="jd">
            <distribution type="Equal">
                <param1>1</param1>
                <param2>2</param2>
            </distribution>
        </skill>
        <!-- definition of the phases of this project category -->
        <phase ref="spec" />
        <phase ref="constr" />
    </project_category>
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->

    <!-- definition of teams with their resources; later only resources will 
        be referenced by projects but it might be a more natural approach to think 
        in teams -->
    <team id="Middleware">
        <resource count="1">
            <availability>0.9</availability>
            <skill ref="jd" />
            <skill ref="dd" />
        </resource>
        <resource count="1">
            <skill ref="cd" />
        </resource>
        <resource count="4">
            <skill ref="jd" />
        </resource>
    </team>
    <team id="Web">
        <resource count="2">
            <availability>0.8</availability>
            <skill ref="jd" />
            <skill ref="dd" />
        </resource>
        <resource count="3">
            <skill ref="jd" />
            <skill ref="xy" />
        </resource>
    </team>

    <!-- Definition of a portfolio -->
    <portfolio>

        <!-- propability of starting a new project; the trigger value is 
            hard coded to >50; adapt your intervall and make sure your min value is smaller 
            than 50; this goes to Portfolio.projectCategoryStartProbability -->
        <distribution type="Equal">
            <param1>50</param1>
            <!--paramx>50<paramx -->
            <param2>70</param2>
        </distribution>

        <!-- definition of projects -->
        <project category_ref="np" />
        <project category_ref="sm" />
    </portfolio>
</simulation>
