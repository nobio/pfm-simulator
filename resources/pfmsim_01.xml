<?xml version="1.0" encoding="UTF-8"?>
<simulation>
    <!-- number of iterations which can be identified with "days" -->
    <iterations>200</iterations>
    <!-- general availability for all resources except there is another value 
        defined at resource level -->
    <availability>0.7</availability>

    <!-- definition of skills; will be referenced by resources and projects/tasks -->
    <skill id="jd">Java Developer</skill>
    <skill id="dd">Database Designer</skill>
    <skill id="cd">Caas Developer</skill>
    <skill id="xy">Klassenkasper</skill>

    <!-- definition of teams with their resources; later only resources will 
        be referenced by projects but it might be a more natural approach to think 
        in teams -->
    <team id="Middleware">
        <resource count="1">
            <availability>0.9</availability>
            <skill ref="jd" />
            <skill ref="dd" />
        </resource>
        <resource count="1">
            <skill ref="cd" />
        </resource>
        <resource count="4">
            <skill ref="jd" />
        </resource>
    </team>
    <team id="Web">
        <resource count="2">
            <availability>0.8</availability>
            <skill ref="jd" />
            <skill ref="dd" />
        </resource>
        <resource count="3">
            <skill ref="jd" />
            <skill ref="xy" />
        </resource>
    </team>

    <!-- Definition of a portfolio -->
    <portfolio>
        <!-- definition of project categories like Small Enhancement, Normal 
            Project, Big Project with it's effort definition -->
        <category id="np">
            <name>Normal Project</name>
            <effort type="constant, equal, normal">
                <param1>50</param1>
                <param2>10</param2>
            </effort>
        </category>
        <category id="sm">
            <name>Small Enhancement</name>
            <effort type="constant, equal, normal">
                <param1>10</param1>
                <param2>4</param2>
            </effort>
        </category>

        <!-- definition of project phases; the efforts are meant to be a 
            weight value; all weights of all phases in one project mean 100% -->
        <phase id="init">
            <name>Initialisation</name>
            <effort type="constant">
                <param1>12</param1>
            </effort>
        </phase>
        <phase id="prep">
            <name>Preperation</name>
            <effort type="equal">
                <param1>20</param1>
                <param2>30</param2>
            </effort>
        </phase>
        <phase id="spec">
            <name>Specification</name>
            <effort type="normal">
                <param1>30</param1>
                <param2>3</param2>
            </effort>
        </phase>
        <phase id="constr">
            <name>Construction</name>
            <effort type="normal">
                <param1>50</param1>
                <param2>10</param2>
            </effort>
        </phase>
        <phase id="acc">
            <name>Acceptance</name>
            <effort type="constant">
                <param1>5</param1>
            </effort>
        </phase>
        <phase id="trans">
            <name>Transition</name>
            <effort type="constant">
                <param1>3</param1>
            </effort>
        </phase>
        <!-- definition of projects -->
        <project category_ref="np" weight="4">
            <workload>
                <distribution type="dist1">
                    <param1>40</param1>
                    <param2>23</param2>
                    <param3>44</param3>
                    <param4>0</param4>
                </distribution>
            </workload>
            <tasks>
                <!-- skills needed for these takss -->
                <skill ref="jd" weight="4" />
                <skill ref="dd" weight="1" />
            </tasks>
            <phase ref="init" />
            <phase ref="prep" />
            <phase ref="spec" />
            <phase ref="constr" />
            <phase ref="trans" />
        </project>
    </portfolio>
</simulation>
